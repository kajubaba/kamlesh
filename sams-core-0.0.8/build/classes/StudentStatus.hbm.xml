<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.narendra.sams.core.domain.StudentStatus" table="student_status">
		
		<id name="id">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="name" column="status" not-null="true"/>
		<property name="active" column="is_active"/>
		<property name="canAssignToStudent" column="update_ready"/>
	</class> 
</hibernate-mapping>
